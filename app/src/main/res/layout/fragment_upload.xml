<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminespace.uploadx_x.UploadFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center"

        android:background="@drawable/estlogo" />

    <TextView
        android:id="@+id/el"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="choisir l'emploi que vous voulez changer !  "
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:background="@color/md_white_1000"
        android:textColor="@color/colorPrimaryDark"/>
    <Spinner
        android:id="@+id/uploademplois_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <uk.co.senab.photoview.PhotoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emploiuploadimage"

        android:background="@color/md_white_1000" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/editeremplois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_file_upload_black_24dp"
        android:text="updater "
        android:textColor="@color/md_white_1000" />


</LinearLayout>

</ScrollView>