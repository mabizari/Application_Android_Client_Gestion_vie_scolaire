<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".info"
    tools:showIn="@layout/activity_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="193dp"
            android:layout_height="127dp"
            android:layout_gravity="center"
            android:background="@drawable/logo_est_mekn_s"
            android:textSize="20sp" />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Histoire"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawableLeft="@drawable/ic_library_books_black_24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/md_white_1000"/>
            <TextView
                android:id="@+id/info1p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:visibility="gone"

                android:justificationMode="inter_word"
                android:text="Les écoles supérieures de technologie ont été créées par le ministère de l\'éducation nationale, de l\'enseignement supérieur, de la formation des cadres et de la recherche. Les premières, celles de Casablanca et de Fès, ont été créées en 1986.
L\'EST d\'Agadir est créée en 1990. Les écoles supérieures de technologie qui sont réparties dans diverses régions du royaume (10 au total), se sont développées en diversifiant les spécialités au cours des années 1990 pour fournir le personnel technique polyvalent dont les entreprises marocaines avaient besoin.
        La création des premiers concours techniques pour l'entrée a eu lieu aussi dans les années 1990."
                android:textAlignment="textStart"

                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/info2"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ADMISSION"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawableLeft="@drawable/ic_lock_open_black_24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/md_white_1000"/>
            <TextView
                android:id="@+id/info2p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:visibility="gone"
                android:text="La sélection des élèves se fait sur la base des notes obtenues au baccalauréat, dossier, entretien voir test.

Le nombre des étudiants admis, chaque année, est très réduit (de 30 à 100 dans chaque filière).

Les étudiants des EST ont généralement des mentions au baccalauréat (Assez bien, Bien, T.bien ou Excellent).

Les EST comportent un nombre d'étudiants étrangers."
                android:textAlignment="textStart"

                android:textSize="18sp"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </FrameLayout>

            <TextView
                 android:id="@+id/btninto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:visibility="gone"
                android:text=" localisation : "
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawableLeft="@drawable/ic_gps_fixed_black_24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/md_white_1000"/>
            <!--   <com.google.android.gms.maps.MapView
                 android:id="@+id/mapVieww"
                   android:visibility="gone"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent" /> -->
            <TextView
                android:id="@+id/imag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Options"
                android:layout_marginTop="15dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:drawableLeft="@drawable/ic_file_upload_black_24dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/md_white_1000"/>
            <LinearLayout

                android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical">
<com.zerophi.gestionvie.help.SlidingTabLayout
    android:id="@+id/tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:background="@color/colorPrimaryDark"
    />

    <androidx.viewpager.widget.ViewPager
        android:visibility="visible"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
        </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>