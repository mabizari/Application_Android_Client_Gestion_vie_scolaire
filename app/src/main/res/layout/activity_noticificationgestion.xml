<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminespace.gestion_noticification.noticificationgestion"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@drawable/ic_notifications_active_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ajouternocification"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/md_white_1000"
            />

    </LinearLayout>
    <Button
        android:id="@+id/voirnotificationadmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/md_white_1000"
        android:text="voir tous les notification "/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/notic_titretxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_white_1000"
        android:layout_margin="4dp"
        android:hint=" Titre de nocification"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notic_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:background="@color/md_white_1000"
            android:inputType="text"/>
    </com.google.android.material.textfield.TextInputLayout>


    <EditText
        android:id="@+id/notic_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" Description"
        />

    <RadioGroup
        android:id="@+id/gr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/gi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:button="@null"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            android:text="gi"/>
        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/md_white_1000"
            android:background="@color/colorPrimaryDark"
            android:text="tsi"/>
        <RadioButton
            android:layout_width="0dp"
            android:textColor="@color/md_white_1000"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="ge"/>
    </RadioGroup>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/btnajouter"
       android:background="@color/green_complete"
        android:drawableLeft="@drawable/ic_setting_black_24dp"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="ajouter" />


</LinearLayout>