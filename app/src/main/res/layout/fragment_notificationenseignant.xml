<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".enseignantespace.notification_enseignant.notificationenseignantFragment"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/logo_est_mekn_s"/>
            <TextView
                android:drawableLeft="@drawable/ic_abacus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ajouternocification"
                android:background="@color/md_blue_A100"
                android:textSize="30sp"
                android:textColor="@color/md_yellow_700"
                />
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText

                android:layout_marginTop="50dp"
                android:id="@+id/notic_titre_enseignant"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/blanc"
                android:backgroundTint="@color/md_blue_50"
                android:fontFamily="monospace"
                android:hint="le titre de cet noticification"
                android:inputType="text"
                android:singleLine="true"
                android:textColorHint="@color/design_default_color_primary_dark" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/notic_description_enseignant"

                android:layout_width="380dp"
                android:layout_height="150dp"
                android:textColorHint="@color/design_default_color_primary_dark"
                android:backgroundTint="@color/md_blue_50"
                android:singleLine="true"
                android:background="@color/blanc"
                android:fontFamily="monospace"
                android:hint="desc"
                android:inputType="textLongMessage" />
        </android.support.design.widget.TextInputLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choisir le module que vous voulez annoncer :  "
        android:drawableLeft="@drawable/ic_file_upload_black_24dp"
        android:background="@color/md_white_1000"
        android:textColor="@color/md_yellow_900"/>
    <Spinner
        android:id="@+id/modulenotificationenseignant"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnajouternotificationenseignant"
            android:background="@color/green_complete"
            android:drawableLeft="@drawable/ic_setting_black_24dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="ajouter" />


    </LinearLayout>