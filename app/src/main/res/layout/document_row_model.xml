<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/documentimageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:src="@drawable/ic_pdf_box"/>

    <TextView
        android:id="@+id/documentpdfnametxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/documentimageview"
        android:layout_alignParentLeft="true"
        android:padding="5dp"
        android:text="PDF DOCUMENT"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/documentauthortxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Author : "
        android:padding="5dp"
        android:layout_below="@+id/documentpdfnametxt"
        android:layout_alignParentLeft="true"/>
</LinearLayout>