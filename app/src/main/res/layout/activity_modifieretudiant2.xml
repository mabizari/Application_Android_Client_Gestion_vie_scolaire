<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".adminespace.gestion_utilisateur.ajouteradmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="modifier ces informations"
        android:layout_margin="30dp"
        android:textColor="@color/roz"
        android:drawableLeft="@drawable/ic_person_add_black_24dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"

            android:text="id unique "/>

        <TextView
            android:id="@+id/id_uniquemodifieretudiant"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:hint="code massar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nom "
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/nommodifieretudiant"
            android:layout_width="133dp"
            android:layout_height="wrap_content"

            android:hint="nom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prenom "
            android:textColor="@color/green"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/prenommodifieretudiant"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:hint="prenom" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="gender "/>
        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/masculin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="masculin"/>

            <RadioButton
                android:id="@+id/feminin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="feminin"/>


        </RadioGroup>
    </LinearLayout>
    <TextView
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="telephone"/>
    <TextView
        android:id="@+id/telephonemodifieretudiant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="telephone"/>
    <TextView
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="address "/>
    <TextView
        android:id="@+id/addressmodifieretudiat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="address"/>
    <TextView
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="modifier l'email electronique "/>
    <TextView
        android:id="@+id/emailmodifieradmin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="email"/>


    <TextView
        android:textColor="@color/green"
        android:textSize="15sp"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choisir l'annee"/>

    <Button
        android:id="@+id/anneemodifieretudiantbtn"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_margin="1sp"
        android:text="annee"
        android:textColor="@color/roz"
        android:textSize="11sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:text="Departement"/>

        <Button
            android:id="@+id/departementmodifieretudiant"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"
            android:text="dept"
            android:textColor="@color/roz"
            android:textSize="11sp" />
        <TextView
            android:textColor="@color/green"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
            android:text="semestre"/>

        <Button
            android:id="@+id/semestremodifieretudiant"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_margin="1sp"
            android:text="semestre"
            android:textColor="@color/roz"
            android:textSize="11sp" />
    </LinearLayout>


    <Button
        android:id="@+id/modifieretudiant22"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:text="modifier"
        android:textColor="@color/md_white_1000" />


    </LinearLayout>
</ScrollView>