<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".adminespace.uploadx_x.uploadx">
    <TextView
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:background="@color/md_white_1000"
        android:id="@+id/textemploi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:text="text" />
  <TextView

        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="voir l'image ici  "
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:background="@color/md_white_1000"
        android:textColor="@color/colorPrimaryDark"/>
    <ImageView
        android:id="@+id/previewcetimage"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:visibility="visible" />

    <Button
        android:drawableLeft="@drawable/ic_file_upload_black_24dp"
        android:id="@+id/chooseImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="choisir Image" />

    <Button
        android:id="@+id/uploadimage"
        android:layout_width="309dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:background="@color/md_blue_A100"
        android:drawableLeft="@drawable/ic_public_black_24dp"
        android:text="upload" />


</LinearLayout>